#pragma once

namespace skl {
//! Thread id type
using thread_id_t = unsigned int;

//! Invalid thread id
constexpr thread_id_t CInvalidThreadId = 0U;

//! Acquire the current thread's uuid
[[nodiscard]] thread_id_t current_thread_id() noexcept;
} // namespace skl
