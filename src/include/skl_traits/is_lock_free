#pragma once

namespace skl {
// Check if atomic operations on type T are always lock-free
template <typename T>
inline constexpr bool is_always_lock_free_v =
    __atomic_always_lock_free(sizeof(T), static_cast<T*>(nullptr));
} // namespace skl
